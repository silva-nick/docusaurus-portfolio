{
  "compilerOptions": {
    // Basis
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    // JS / React
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    // Declaration
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Config
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": false, //?
    // Libs
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
    //"types": ["node", "@docusaurus/module-type-aliases"],
  },
  "exclude": ["node_modules", "example", "**/__tests__/**/*"]
}
